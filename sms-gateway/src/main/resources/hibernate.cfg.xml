<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name = "hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name = "hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <!-- Assume test is the database name -->
        <!-- DOCKER -->
        <!--<property name = "hibernate.connection.url">jdbc:mysql://localhost:3306/dbsms</property>-->
        <property name = "hibernate.connection.url">jdbc:mysql://173.15.0.5:3306/dbsms</property>
        <property name = "hibernate.connection.username">root</property>
        <!-- DOCKER -->
        <!--<property name = "hibernate.connection.password"/>-->
        <property name = "hibernate.connection.password">admin</property>
        <property name="hibernate.connection.pool_size">10</property>
        <property name="hibernate.id.new_generator_mappings">false</property>
        <!-- Mapping -->
        <mapping class="ir.navaco.mcb.sms.gateway.services.handlers.db.entity.SMSResponse"/>
        <mapping class="ir.navaco.mcb.sms.gateway.services.handlers.db.entity.SMSRequest"/>
    </session-factory>
</hibernate-configuration>